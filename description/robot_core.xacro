<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>


    <material name="green">
        <color rgba="0 1 0 1" />
    </material>
    <material name="gray">
        <color rgba="0.7 0.7 0.7 1" />
    </material>
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>
    <link name="base_link">

    </link>
    <!-- vex_chassis link -->
    <joint name="vex_chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="vex_chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>
    <link name="vex_chassis">
        <visual>
            <origin xyz=".3 0 0.075"/>
            <geometry>
                <box size="0.6 0.6 0.15"/>
                
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <origin xyz=".3 0 0.075"/>
            <geometry>
                <box size="0.6 0.6 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.6" y="0.6" z="0.15">
            <origin xyz=".3 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="vex_chassis">
        <material>Gazebo/Gray</material>
    </gazebo>

        
    



<!-- left wheel link -->
<joint name="left_wheel_joint" type='continuous'>
            <parent link="base_link"/>
            <child link="left_wheel"/>
            <origin xyz=".4 0.335 0" rpy="-${pi/2} 0 0"/>
            <axis xyz="0 0 1"/>
        </joint>
        <link name="left_wheel">
            <visual>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
                <material name="green"/>
            </visual>
            
            <collision>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.1" radius="0.1" length="0.04">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="left_wheel">
            <material>Gazebo/Green</material>
        </gazebo>
            
        <!-- left wheel2 link -->
        <joint name="left_wheel2_joint" type='fixed'>
            <parent link="base_link"/>
            <child link="left_wheel2"/>
            <origin xyz="0 0.335 0" rpy="-${pi/2} 0 0"/>
            <axis xyz="0 0 1"/>
        </joint>

        <link name="left_wheel2">
            <visual>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
                <material name="green"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.1" radius="0.1" length="0.04">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="left_wheel2">
            <material>Gazebo/Green</material>
            <mu1 value="0.001"/>
            <mu2 value="0.001"/>
        </gazebo>

        <!-- right wheel link -->
        <joint name="right_wheel_joint" type='continuous'>
            <parent link="base_link"/>
            <child link="right_wheel"/>
            <origin xyz="0.4 -0.335 0" rpy="${pi/2} 0 0"/>
            <axis xyz="0 0 -1"/>
        </joint>
        <link name="right_wheel">
            <visual>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
                <material name="green"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.15" radius="0.1" length="0.04">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="right_wheel">
            <material>Gazebo/Green</material>
        </gazebo>

        <!-- right wheel2 link -->
        <joint name="right_wheel2_joint" type='fixed'>
            <parent link="base_link"/>
            <child link="right_wheel2"/>
            <origin xyz="0 -0.335 0" rpy="${pi/2} 0 0"/>
            <axis xyz="0 0 -1"/>
        </joint>
        
        <link name="right_wheel2">
            <visual>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
                <material name="green"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.1" radius="0.1" length="0.04">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="right_wheel2">
            <material>Gazebo/Green</material>
            <mu1 value="0.001"/>
            <mu2 value="0.001"/>
        </gazebo>

    </robot>